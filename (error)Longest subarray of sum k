#include <bits/stdc++.h>
using namespace std;

int main()
{
   int size = 7;
   int arr[7] = {4,1,1,1,2,3,5};
   int k = 5;
   
  int sum = 0, mx = INT_MIN;
   
   int i=0, j=0;
   
   while(j<size){
       sum = sum + arr[j];
         if(sum<k)
          j++;
          
         else if(sum==k){
             mx = max(mx,j-i+1);
               j++;
         }
         else if(sum>k){
             while(sum>k){
                 sum = sum - arr[i];
                 i++;
             }
         }
       
   }
      cout<<mx<<endl;
    return 0;
}

error= while loop running only once && on changing array showing heap buffer overflow
